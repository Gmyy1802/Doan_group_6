<Window x:Class="PhoneStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneStore"
        mc:Ignorable="d"
        Title="Quan Li Khach Hang" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Thông tin khách hàng" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <UniformGrid Columns="3">
                    <StackPanel Margin="5">
                        <TextBlock Text="Họ tên:"/>
                        <TextBox x:Name="txtFullName"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Số điện thoại:"/>
                        <TextBox x:Name="txtPhone"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Email:"/>
                        <TextBox x:Name="txtEmail"/>
                    </StackPanel>
                    <StackPanel Margin="5" Grid.ColumnSpan="2">
                        <TextBlock Text="Địa chỉ:"/>
                        <TextBox x:Name="txtAddress"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Ghi chú:"/>
                        <TextBox x:Name="txtNote"/>
                    </StackPanel>
                </UniformGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBox x:Name="txtSearch" Width="150" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
                    <Button Content="Tìm kiếm" Click="BtnSearch_Click" Width="80" Margin="0,0,20,0"/>
                    <Button Content="Thêm" Click="BtnAdd_Click" Width="80" Margin="0,0,5,0" Background="LightGreen"/>
                    <Button Content="Sửa" Click="BtnUpdate_Click" Width="80" Margin="0,0,5,0" Background="LightYellow"/>
                    <Button Content="Xóa" Click="BtnDelete_Click" Width="80" Background="LightPink"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <DataGrid Grid.Row="1" x:Name="dgCustomer" AutoGenerateColumns="False" 
                  SelectionChanged="DgCustomer_SelectionChanged" IsReadOnly="True" AlternatingRowBackground="GhostWhite">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="Họ Tên" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding PhoneNumber}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="*"/>
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>