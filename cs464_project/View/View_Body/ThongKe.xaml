<Page x:Class="cs464_project.View_Body.ThongKe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cs464_project.View_Body"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Thống kê - Quản lý cửa hàng" Height="650" Width="900">

    <Grid>
        <DockPanel>

            
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Hệ thống" Click="Menu_HeThong_Click"/>
                <MenuItem Header="Quản lý" Click="Menu_QuanLy_Click"/>
                <MenuItem Header="Thống kê" Click="Menu_ThongKe_Click"/>
                <MenuItem Header="Trợ giúp" Click="Menu_TroGiup_Click"/>
            </Menu>

            
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem Content="Trạng thái: sẵn sàng"/>
            </StatusBar>

           
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                
                    <RowDefinition Height="Auto"/>
                 
                    <RowDefinition Height="*"/>
                    
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="Bộ lọc thống kê" Margin="5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <DatePicker x:Name="dpTuNgay" Grid.Column="1" Height="26"/>

                        <TextBlock Grid.Column="3" Text="Đến ngày:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <DatePicker x:Name="dpDenNgay" Grid.Column="4" Height="26"/>

                        <Button Grid.Column="6"
                                Content="Xem báo cáo"
                                Height="26" Width="110"
                                Click="BtnXemBaoCao_Click"/>

                        <TextBlock Grid.Column="7" Text="Chọn khoảng thời gian để thống kê doanh thu và hóa đơn."
Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </GroupBox>

                <Grid Grid.Row="1" Margin="5,0,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Margin="5" Padding="10" CornerRadius="8"
                            BorderThickness="1" BorderBrush="#DDD">
                        <StackPanel>
                            <TextBlock Text="TỔNG DOANH THU" FontWeight="Bold"/>
                            <TextBlock x:Name="txtTongDoanhThu" Text="0 đ" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="Theo khoảng thời gian" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Margin="5" Padding="10" CornerRadius="8"
                            BorderThickness="1" BorderBrush="#DDD">
                        <StackPanel>
                            <TextBlock Text="TỔNG HÓA ĐƠN" FontWeight="Bold"/>
                            <TextBlock x:Name="txtTongHoaDon" Text="0" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="Số lượng hóa đơn" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Margin="5" Padding="10" CornerRadius="8"
                            BorderThickness="1" BorderBrush="#DDD">
                        <StackPanel>
                            <TextBlock Text="TỔNG SẢN PHẨM BÁN" FontWeight="Bold"/>
                            <TextBlock x:Name="txtTongSanPhamBan" Text="0" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="Tổng số lượng đã bán" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Margin="5" Padding="10" CornerRadius="8"
                            BorderThickness="1" BorderBrush="#DDD">
                        <StackPanel>
                            <TextBlock Text="NHÂN VIÊN BÁN NHIỀU" FontWeight="Bold"/>
                            <TextBlock x:Name="txtNhanVienBanNhieu" Text="(Chưa có)" FontSize="18" FontWeight="Bold" Margin="0,8,0,0"/>
                            <TextBlock Text="Theo doanh thu / hóa đơn" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ============ TABLE DETAIL ============ -->
                <GroupBox Grid.Row="2" Header="Bảng thống kê chi tiết" Margin="5">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                            <TextBlock Text="Chế độ:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <ComboBox x:Name="cboCheDo" Width="220" Height="26" SelectedIndex="0"
                                      SelectionChanged="CboCheDo_SelectionChanged">
                                <ComboBoxItem Content="Theo ngày (Ngày - Số hóa đơn - Doanh thu)"/>
                                <ComboBoxItem Content="Theo hóa đơn (Mã HĐ - Ngày - Nhân viên - Tổng tiền)"/>
                            </ComboBox>

                            <TextBlock Text="   Tìm nhanh:" VerticalAlignment="Center" Margin="15,0,6,0"/>
                            <TextBox x:Name="txtTimNhanh" Width="220" Height="26" Margin="0,0,8,0"/>
                            <Button Content="Tìm" Width="70" Height="26" Click="BtnTimNhanh_Click"/>
                        </StackPanel>

                        <DataGrid x:Name="dgThongKe"
                                  Grid.Row="1"
                                  AutoGenerateColumns="True"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                    </Grid>
                </GroupBox>

            </Grid>
        </DockPanel>
    </Grid>
</Page>
