<Window x:Class="cs464_project.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs464_project.View"
        mc:Ignorable="d"
        Title="Đăng nhập - Quản lý cửa hàng điện thoại"
        Height="520" Width="880"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F6FB">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#0F62FE">
            <Grid Margin="40">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="PHONE STORE"
                               Foreground="White"
                               FontSize="34"
                               FontWeight="Bold"/>

                    <TextBlock Text="Quản lý cửa hàng điện thoại&#x0a;nhanh • gọn • dễ dùng"
                               Foreground="#DDE7FF"
                               FontSize="16"
                               Margin="0,10,0,0"
                               LineHeight="22"/>

                    <Border Margin="0,30,0,0"
                            Background="#1AFFFFFF"
                            CornerRadius="14"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Gợi ý:"
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="• Đăng nhập để vào trang Tổng Quát&#x0a;• Quản lý sản phẩm, khách hàng, hóa đơn&#x0a;• Thống kê doanh thu theo ngày/tháng"
                                       Foreground="#DDE7FF"
                                       Margin="0,8,0,0"
                                       LineHeight="20"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Border Width="420"
                    Padding="28"
                    CornerRadius="18"
                    Background="White"
                    BorderBrush="#E6EAF2"
                    BorderThickness="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,18">
                        <TextBlock Text="Đăng nhập"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="#1E293B"/>
                        <TextBlock Text="Vui lòng nhập tài khoản để tiếp tục"
                                   Foreground="#64748B"
                                   Margin="0,6,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,0,0,14">
                        <TextBlock Text="Tên đăng nhập"
                                   Foreground="#334155"
                                   FontWeight="SemiBold"
                                   Margin="2,0,0,6"/>
                        <Border CornerRadius="10" BorderBrush="#D8DEE9" BorderThickness="1" Background="#F8FAFC">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="👤"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="14"
                                           Foreground="#64748B"/>

                                <TextBox x:Name="txt_DN"
                                         Grid.Column="1"
                                         Height="42"
                                         Padding="10,0,10,0"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,10">
                        <TextBlock Text="Mật khẩu"
                                   Foreground="#334155"
                                   FontWeight="SemiBold"
                                   Margin="2,0,0,6"/>

                        <Border CornerRadius="10" BorderBrush="#D8DEE9" BorderThickness="1" Background="#F8FAFC">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="44"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="🔒"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="14"
                                           Foreground="#64748B"/>

                                <PasswordBox x:Name="pw_mk"
                                             Grid.Column="1"
                                             Height="42"
                                             Padding="10,0,10,0"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             FontSize="14"
                                             PasswordChanged="pw_mk_PasswordChanged"/>

                                <TextBox x:Name="txtPasswordVisible"
                                         Grid.Column="1"
                                         Height="42"
                                         Padding="10,0,10,0"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Visibility="Collapsed"
                                         TextChanged="txtPasswordVisible_TextChanged"/>

                                <Button x:Name="btnTogglePassword"
                                        Grid.Column="2"
                                        Width="36" Height="36"
                                        Margin="4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="btnTogglePassword_Click"
                                        ToolTip="Ẩn/Hiện mật khẩu">
                                    <TextBlock x:Name="txtEyeIcon"
                                               Text="👁"
                                               FontSize="16"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Foreground="#64748B"/>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Grid Grid.Row="3" Margin="0,0,0,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Content="Ghi nhớ đăng nhập"
                                  Foreground="#475569"
                                  VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1"
                                   Text="Quên mật khẩu?"
                                   Foreground="#0F62FE"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"/>
                    </Grid>

                    <StackPanel Grid.Row="4">
                        <Button Content="Đăng nhập"
                                Height="44"
                                FontWeight="SemiBold"
                                Background="#0F62FE"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnLogin_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="Thoát"
                                Height="44"
                                Margin="0,10,0,0"
                                FontWeight="SemiBold"
                                Background="#EEF2FF"
                                Foreground="#1E293B"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnThoat_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

             
                    <TextBlock Grid.Row="5"
                               Text="© Group 6-2026 "
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"
                               Margin="0,18,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>