<Window x:Class="cs464_project.View.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs464_project.View"
        mc:Ignorable="d"
        Title="Quản Lý Cửa Hàng Điện Thoại" Height="650" Width="900">

    <Grid>
        <DockPanel>


            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Tổng Quát" Click="Menu_TongQuat_Click"/>
                <MenuItem Header="Bán Hàng" Click="Menu_BanHang_Click"/>
                <MenuItem Header="Sản Phẩm" Click="Menu_SanPham_Click"/>
                <MenuItem Header="Khách Hàng" Click="Menu_KhachHang_Click"/>
                <MenuItem Header="Nhân Viên" Click="Menu_NhanVien_Click"/>
                <MenuItem Header="Thống Kê" Click="Menu_ThongKe_Click"/>
                <MenuItem Header="Hệ Thống">
                    <MenuItem Header="Đăng xuất" Click="Menu_DangXuat_Click"/>
                </MenuItem>
            </Menu>


            <StatusBar DockPanel.Dock="Bottom" Height="Auto">
                <StatusBarItem Content="Trạng thái: sẵn sàng"/>
                <Separator/>
                <StatusBarItem Content="User: Admin"/>
                <Separator/>
                <StatusBarItem>
                    <TextBlock>
            <Run Text="Hôm nay: "/>
            <Run x:Name="txtHomNay" Text="--/--/----"/>
                    </TextBlock>
                </StatusBarItem>
            </StatusBar>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Margin="5" Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
                        <StackPanel>
                            <TextBlock Text="DOANH THU HÔM NAY" FontWeight="Bold"/>
                            <TextBlock x:Name="txtDoanhThuHomNay" Text="0 đ" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="Tổng tiền bán trong ngày" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Margin="5" Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
                        <StackPanel>
                            <TextBlock Text="HÓA ĐƠN HÔM NAY" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSoHoaDonHomNay" Text="0" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="Số lượng hóa đơn" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Margin="5" Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
                        <StackPanel>
                            <TextBlock Text="TỔNG SẢN PHẨM" FontWeight="Bold"/>
                            <TextBlock x:Name="txtTongSanPham" Text="0" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="Sản phẩm đang quản lý" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Margin="5" Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
                        <StackPanel>
                            <TextBlock Text="TỔNG NHÂN VIÊN" FontWeight="Bold"/>
                            <TextBlock x:Name="txtTongNhanVien" Text="0" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="Nhân viên trong hệ thống" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Margin="5" Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="HÓA ĐƠN GẦN ĐÂY" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                            <DataGrid x:Name="dgHoaDonGanDay"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          RowHeight="28">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã HĐ" Binding="{Binding InvoiceCode}" Width="*"/>
                                    <DataGridTextColumn Header="Ngày" Binding="{Binding InvoiceDate}" Width="*"/>
                                    <DataGridTextColumn Header="Khách" Binding="{Binding CustomerName}" Width="*"/>
                                    <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount}" Width="*"/>
                                    <DataGridTextColumn Header="NV" Binding="{Binding EmployeeName}" Width="*"/>
                                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="5">
                        <Border Margin="0,0,0,10" Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="TOP BÁN CHẠY (HÔM NAY)" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                <ListView x:Name="lvTopBanChay" Height="180">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Sản phẩm" DisplayMemberBinding="{Binding ProductName}" Width="160"/>
                                            <GridViewColumn Header="SL" DisplayMemberBinding="{Binding Quantity}" Width="50"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </DockPanel>
                        </Border>

                        <Border Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="SẮP HẾT HÀNG" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                <ListView x:Name="lvSapHetHang" Height="180">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Sản phẩm" DisplayMemberBinding="{Binding ProductName}" Width="160"/>
                                            <GridViewColumn Header="Tồn" DisplayMemberBinding="{Binding Quantity}" Width="50"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </DockPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>

        </DockPanel>
    </Grid>
</Window>
