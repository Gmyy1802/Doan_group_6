<UserControl x:Class="cs464_project.View_Body.ThongKeDoanhThu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs464_project.View_Body"
        mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter area -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>
            <DatePicker x:Name="dpTuNgay" Width="150" Margin="0,0,15,0" VerticalAlignment="Center"/>
            <TextBlock Text="Đến ngày:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>
            <DatePicker x:Name="dpDenNgay" Width="150" Margin="0,0,15,0" VerticalAlignment="Center"/>
            <Button x:Name="btnThongKe" Content="Thống kê" Width="100" Height="30"
                    Click="BtnThongKe_Click" Background="#FF4CAF50" Foreground="White"
                    FontSize="14" Cursor="Hand"/>
        </StackPanel>

        <!-- Summary cards -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#FF2196F3" CornerRadius="5" Padding="15" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="Tổng doanh thu" Foreground="White" FontSize="13"/>
                    <TextBlock x:Name="txtTongDoanhThu" Text="0 ₫" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#FF4CAF50" CornerRadius="5" Padding="15" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="Số hóa đơn" Foreground="White" FontSize="13"/>
                    <TextBlock x:Name="txtSoHoaDon" Text="0" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="#FFFF9800" CornerRadius="5" Padding="15" Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock Text="Trung bình/đơn" Foreground="White" FontSize="13"/>
                    <TextBlock x:Name="txtTrungBinh" Text="0 ₫" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Revenue by date -->
        <GroupBox Grid.Row="2" Header="Doanh thu theo ngày" Margin="0,0,0,5" FontSize="14">
            <DataGrid x:Name="dgDoanhThuTheoNgay" AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ngày" Binding="{Binding Ngay, StringFormat=dd/MM/yyyy}" Width="*"/>
                    <DataGridTextColumn Header="Số HĐ" Binding="{Binding SoHD}" Width="*"/>
                    <DataGridTextColumn Header="Doanh thu" Binding="{Binding DoanhThu, StringFormat=N0}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Top selling products -->
        <GroupBox Grid.Row="3" Header="Sản phẩm bán chạy trong kỳ" Margin="0,5,0,0" FontSize="14">
            <DataGrid x:Name="dgTopSanPham" AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sản phẩm" Binding="{Binding TenSP}" Width="2*"/>
                    <DataGridTextColumn Header="SL bán" Binding="{Binding SoLuong}" Width="*"/>
                    <DataGridTextColumn Header="Doanh thu" Binding="{Binding DoanhThu, StringFormat=N0}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>
