<UserControl x:Class="cs464_project.View_Body.QuanLySanPham"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs464_project.View_Body"
        xmlns:vm="clr-namespace:cs464_project.ViewModel"
        mc:Ignorable="d"
        Loaded="Window_Loaded">
    <UserControl.DataContext>
        <vm:QuanLySanPhamViewModel/>
    </UserControl.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Tìm kiếm:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Text="{Binding TimKiem, UpdateSourceTrigger=PropertyChanged}" Width="250" Height="28" VerticalContentAlignment="Center" Margin="0,0,5,0"/>
            <Button Content="Tìm kiếm" Command="{Binding SearchCommand}" Width="80" Height="28"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}" Grid.Column="0" Margin="0,0,10,0"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã SP" Binding="{Binding ProductCode}" Width="80"/>
                    <DataGridTextColumn Header="Tên SP" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Loại" Binding="{Binding CategoryName}" Width="100"/>
                    <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" Width="70"/>
                    <DataGridTextColumn Header="Giá bán" Binding="{Binding Price, StringFormat=N0}" Width="90"/>
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Form Panel -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="4">
                    <StackPanel>
                    <TextBlock Text="Thông tin sản phẩm" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Mã SP:" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding MaSP}" Height="28" Margin="0,0,0,8" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Tên SP:" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding TenSP}" Height="28" Margin="0,0,0,8" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Loại:" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" Height="28" Margin="0,0,0,8"
                              DisplayMemberPath="CategoryName"/>

                    <TextBlock Text="Đơn vị:" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding DonVi}" Height="28" Margin="0,0,0,8" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Giá bán:" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding GiaBan}" Height="28" Margin="0,0,0,8" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Giá nhập:" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding GiaNhap}" Height="28" Margin="0,0,0,8" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Số lượng:" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding SoLuong}" Height="28" Margin="0,0,0,8" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Mô tả:" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding MoTa}" Height="28" Margin="0,0,0,12" VerticalContentAlignment="Center"/>

                    <WrapPanel HorizontalAlignment="Center">
                        <Button Content="Thêm" Command="{Binding AddCommand}" Width="60" Height="28" Margin="3"/>
                        <Button Content="Sửa" Command="{Binding EditCommand}" Width="60" Height="28" Margin="3"/>
                        <Button Content="Xóa" Command="{Binding DeleteCommand}" Width="60" Height="28" Margin="3"/>
                        <Button Content="Làm mới" Command="{Binding RefreshCommand}" Width="70" Height="28" Margin="3"/>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
