<UserControl x:Class="cs464_project.View_Body.QuanLyNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs464_project.View_Body"
        mc:Ignorable="d"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Search Bar -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Tìm kiếm:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtTimKiem" Width="250" Height="28" VerticalContentAlignment="Center" Margin="0,0,5,0"/>
            <Button x:Name="btnTimKiem" Content="Tìm kiếm" Width="80" Height="28" Click="BtnTimKiem_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgNhanVien" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionChanged="DgNhanVien_SelectionChanged"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  HeadersVisibility="Column" AlternatingRowBackground="#F5F5F5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã NV" Binding="{Binding EmployeeCode}" Width="80"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="70"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding BirthDate, StringFormat=dd/MM/yyyy}" Width="90"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="150"/>
                <DataGridTextColumn Header="Ngày vào" Binding="{Binding HireDate, StringFormat=dd/MM/yyyy}" Width="90"/>
                <DataGridTextColumn Header="Lương cơ bản" Binding="{Binding BaseSalary, StringFormat=N0}" Width="100"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusText}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form Panel -->
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="0,0,0,0">
            <TextBlock Text="Thông tin nhân viên" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Mã NV:" Margin="0,0,0,3"/>
            <TextBox x:Name="txtMaNV" Height="28" IsReadOnly="True" Background="#EEEEEE" VerticalContentAlignment="Center" Margin="0,0,0,8"/>

            <TextBlock Text="Họ tên:" Margin="0,0,0,3"/>
            <TextBox x:Name="txtHoTen" Height="28" VerticalContentAlignment="Center" Margin="0,0,0,8"/>

            <TextBlock Text="Giới tính:" Margin="0,0,0,3"/>
            <ComboBox x:Name="cboGioiTinh" Height="28" Margin="0,0,0,8">
                <ComboBoxItem Content="Nam"/>
                <ComboBoxItem Content="Nữ"/>
            </ComboBox>

            <TextBlock Text="Ngày sinh:" Margin="0,0,0,3"/>
            <DatePicker x:Name="dpNgaySinh" Height="28" Margin="0,0,0,8"/>

            <TextBlock Text="Địa chỉ:" Margin="0,0,0,3"/>
            <TextBox x:Name="txtDiaChi" Height="28" VerticalContentAlignment="Center" Margin="0,0,0,8"/>

            <TextBlock Text="Ngày vào làm:" Margin="0,0,0,3"/>
            <DatePicker x:Name="dpNgayVao" Height="28" Margin="0,0,0,8"/>

            <TextBlock Text="Lương cơ bản:" Margin="0,0,0,3"/>
            <TextBox x:Name="txtLuong" Height="28" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <WrapPanel HorizontalAlignment="Center">
                <Button x:Name="btnThem" Content="Thêm" Width="60" Height="30" Margin="3" Click="BtnThem_Click"/>
                <Button x:Name="btnSua" Content="Sửa" Width="60" Height="30" Margin="3" Click="BtnSua_Click"/>
                <Button x:Name="btnXoa" Content="Xóa" Width="60" Height="30" Margin="3" Click="BtnXoa_Click"/>
                <Button x:Name="btnLamMoi" Content="Làm mới" Width="70" Height="30" Margin="3" Click="BtnLamMoi_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
