<UserControl x:Class="cs464_project.View_Body.QuanLyKhachHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs464_project.View_Body"
        mc:Ignorable="d"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Tìm kiếm:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtTimKiem" Width="250" Height="28" VerticalContentAlignment="Center" Margin="0,0,5,0"/>
            <Button x:Name="btnTimKiem" Content="Tìm kiếm" Width="80" Height="28" Click="BtnTimKiem_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid x:Name="dgKhachHang" Grid.Column="0" Margin="0,0,10,0"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionMode="Single" SelectionChanged="DgKhachHang_SelectionChanged"
                      CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã KH" Binding="{Binding CustomerCode}" Width="80"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="100"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Form Panel -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Thông tin khách hàng" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Mã KH:" Margin="0,5,0,2"/>
                    <TextBox x:Name="txtMaKH" Height="28" IsReadOnly="True" Background="#F0F0F0" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Họ tên:" Margin="0,8,0,2"/>
                    <TextBox x:Name="txtHoTen" Height="28" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Số điện thoại:" Margin="0,8,0,2"/>
                    <TextBox x:Name="txtSDT" Height="28" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Email:" Margin="0,8,0,2"/>
                    <TextBox x:Name="txtEmail" Height="28" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Địa chỉ:" Margin="0,8,0,2"/>
                    <TextBox x:Name="txtDiaChi" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top"/>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button x:Name="btnThem" Content="Thêm" Grid.Row="0" Grid.Column="0"
                                Height="30" Margin="0,0,3,5" Click="BtnThem_Click"/>
                        <Button x:Name="btnSua" Content="Sửa" Grid.Row="0" Grid.Column="1"
                                Height="30" Margin="3,0,0,5" Click="BtnSua_Click"/>
                        <Button x:Name="btnXoa" Content="Xóa" Grid.Row="1" Grid.Column="0"
                                Height="30" Margin="0,0,3,0" Click="BtnXoa_Click"/>
                        <Button x:Name="btnLamMoi" Content="Làm mới" Grid.Row="1" Grid.Column="1"
                                Height="30" Margin="3,0,0,0" Click="BtnLamMoi_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
